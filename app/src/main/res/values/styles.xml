<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Link">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/soft_blue</item>
    </style>

    <style name="InputText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExplainText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/very_light_pink</item>
    </style>

    <style name="InputTextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VerifyText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubCaption">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/very_light_pink</item>
    </style>

    <style name="Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SubLittle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/very_light_pink</item>
    </style>

    <style name="ContentLittle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RecentDay">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#262e3a</item>
    </style>

    <style name="PayText">
        <item name="android:gravity">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="AllView">
        <item name="android:gravity">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/very_light_pink</item>
    </style>

    <style name="H2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdvertiseTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AdvertiseSubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AdvertiseDay">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AlertText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ios_input" >
        <item name="android:singleLine">true</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@drawable/bg_input_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
